<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3c0ac">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#607d8b"
        tools:context="com.example.user.find_price.Frame">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/frame1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/wood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:paddingLeft="2dp"
            android:text="Wood"
            android:textStyle="bold"
            android:paddingRight="50dp"
            android:fontFamily="serif"
            android:shadowColor="#ffffff"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:textSize="16sp" />
        <CheckBox
            android:id="@+id/newwood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="20dp"
            android:text="New Wood"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:shadowColor="#ffffff"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length: "
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="In Inches"
                android:text=""
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breadth: "
                android:fontFamily="serif"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Breadth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="In Inches"
                android:textSize="18dp"
                android:text=""
                android:inputType="numberDecimal"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outer Width: "
                android:fontFamily="serif"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Outerwidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="In Inches"
                android:textSize="18dp"
                android:text=""
                android:inputType="numberDecimal"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wood Thickness: "
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/woodwidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="In Inches"
                android:textSize="18dp"
                android:text=""
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textcubefeet"
                android:text="Cube-Feet Rate: "
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/cubefeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="In ₹"
                android:textSize="18dp"
                android:text=""
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:inputType="numberDecimal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textsquarefeet"
                android:text="Square-Feet Rate: "
                android:textSize="18dp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/squarefeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="In ₹"
                android:textSize="18dp"
                android:text=""
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:id="@+id/btn_calculate" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price: "
                android:textSize="20dp"
                android:fontFamily="serif"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="20dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>